ifneq ($(FORTRAN), intel)
  ifneq ($(FORTRAN), gnu)
    ifneq ($(FORTRAN), nvidia)
      $(error Unknown option for FORTRAN: $(FORTRAN)!)
    endif
  endif
endif

ifneq ($(ASSERT), yes)
  ifneq ($(ASSERT), no)
    $(error Unknown option for ASSERT: $(ASSERT)!)
  endif
endif

ifneq ($(DEBUG), yes)
  ifneq ($(DEBUG), no)
    $(error Unknown option for DEBUG: $(DEBUG)!)
  endif
endif

ifneq ($(PROF), yes)
  ifneq ($(PROF), no)
    $(error Unknown option for PROF: $(PROF)!)
  endif
endif

ifneq ($(REAL), double)
  ifneq ($(REAL), single)
    $(error Unknown option for REAL: $(REAL)!)
  endif
endif

ifneq ($(OMP), yes)
  ifneq ($(OMP), no)
    $(error Unknown option for OMP: $(OMP)!)
  endif
endif

ifneq ($(SORT), quick)
  ifneq ($(SORT), heap)
    $(error Unknown option for SORT: $(SORT)!)
  endif
endif

